<Window x:Class="HW1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        Title="HW1" 
        
        MinHeight="263.529" MinWidth="251.863"
        Height="263.529" Width="251.863">

    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Enter the number from 1 to 10"/>
            <TextBox Grid.Column="1" x:Name="NumberField" Margin="10,10,10,10"/>
        </Grid>

        <Button Content="Check the Answer" Margin="10,10,10,10" Click="Button_Click"/>
        <Label x:Name="CounterLabel" Height="50"/>
        <Label x:Name="InfoLabel" Height="50"/>
    </StackPanel>


</Window>
